<Window x:Class="BrasilDidaticos.Apresentacao.WSessao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="frmLogin" Title="Brasil Didáticos" 
        mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        d:DesignHeight="180" d:DesignWidth="300" SizeToContent="WidthAndHeight" 
        Topmost="False" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" xmlns:my="clr-namespace:BrasilDidaticos.Apresentacao.Controler" Icon="/BrasilDidaticos;component/brasildidaticos.ico" WindowStyle="SingleBorderWindow">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF6A6AF3" Offset="1" />
            <GradientStop Color="White" Offset="0.214" />
        </LinearGradientBrush>
    </Window.Background>
    <DockPanel>
        <StackPanel Name="stpCabecalho" DockPanel.Dock="Top" Height="50" Orientation="Horizontal">
            <Image Source="/BrasilDidaticos;component/Imagens/ico_wsessao.png" Height="32" Width="32" Margin="10,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="SESSÃO" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="24" />
        </StackPanel>    
        <Grid Name="drgConteudo" DockPanel.Dock="Top" Height="60" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <my:MTextBox Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" x:Name="txtLogin" Titulo="Usuário:" TamanhoTexto="20" VerticalAlignment="Top" Width="280" />
            <my:MPasswordBox Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Right" x:Name="txtSenha" Titulo="Senha:" TamanhoTexto="10" VerticalAlignment="Top" Width="280" />
        </Grid>
        <Grid Name="drgBotoes" DockPanel.Dock="Top" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="190" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="2" Name="btnEntrar" Grid.Row="2" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" IsDefault="True" Click="btnDesbloquear_Click">
                <StackPanel Orientation="Horizontal" Width="90">
                    <Image Source="/BrasilDidaticos;component/Imagens/ico_desbloquear.png" Margin="0,0,5,0" HorizontalAlignment="Left" />
                    <TextBlock Text="Desbloquear" HorizontalAlignment="Right"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="2" Name="btnCancelar" Grid.Row="2" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center" Width="80" IsCancel="True" Margin="0,0,5,0" Click="btnCancelar_Click">
                <StackPanel Orientation="Horizontal" Width="75">
                    <Image Source="/BrasilDidaticos;component/Imagens/ico_sair.png" Margin="0,0,5,0" HorizontalAlignment="Left" />
                    <TextBlock Text="Sair"/>
                </StackPanel>
            </Button>            
        </Grid>
    </DockPanel>
</Window>
